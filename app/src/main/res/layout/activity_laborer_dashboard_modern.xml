<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.laborer.LaborerDashboardActivity">

    <!-- App Bar Layout with modern design -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="0dp">

        <!-- Collapsing Toolbar -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_header_height"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/primary"
            app:statusBarScrim="@color/primary"
            app:expandedTitleMarginStart="@dimen/spacing_md"
            app:expandedTitleMarginEnd="@dimen/spacing_md"
            app:expandedTitleTextAppearance="@style/TextAppearance.ChotuJobs.HeadlineMedium">

            <!-- Header background -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dashboard_header_bg"
                app:layout_collapseMode="parallax" />

            <!-- Header content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_lg"
                app:layout_collapseMode="parallax">

                <!-- Profile photo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/avatar_size_xl"
                    android:layout_height="@dimen/avatar_size_xl"
                    app:cardCornerRadius="@dimen/corner_radius_round"
                    app:cardElevation="@dimen/elevation_md"
                    app:strokeColor="@color/on_primary"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:id="@+id/profileImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_placeholder"
                        android:contentDescription="@string/cd_profile_photo" />

                </com.google.android.material.card.MaterialCardView>

                <!-- User name -->
                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="John Doe"
                    android:textAppearance="@style/TextAppearance.ChotuJobs.HeadlineSmall"
                    android:textColor="@color/on_primary"
                    android:textStyle="bold" />

                <!-- User rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/rating_star_size"
                        android:layout_height="@dimen/rating_star_size"
                        android:src="@drawable/ic_star_filled"
                        android:contentDescription="@string/cd_rating_star" />

                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:text="4.8"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@color/on_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reviewCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:text="(24 reviews)"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/on_primary_container" />

                </LinearLayout>

            </LinearLayout>

            <!-- Toolbar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_menu"
                app:menu="@menu/dashboard_menu"
                app:title="Dashboard"
                app:titleTextColor="@color/on_primary" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Quick stats cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Active jobs card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.ChotuJobs.Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_xs"
                    app:cardBackgroundColor="@color/primary_container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/activeJobsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textAppearance="@style/TextAppearance.ChotuJobs.HeadlineLarge"
                            android:textColor="@color/on_primary_container"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active Jobs"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_primary_container" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Pending bids card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.ChotuJobs.Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/spacing_xs"
                    app:cardBackgroundColor="@color/secondary_container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/pendingBidsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textAppearance="@style/TextAppearance.ChotuJobs.HeadlineLarge"
                            android:textColor="@color/on_secondary_container"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending Bids"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_secondary_container" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Total earnings card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.ChotuJobs.Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_xs"
                    app:cardBackgroundColor="@color/tertiary_container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/totalEarnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹12.5K"
                            android:textAppearance="@style/TextAppearance.ChotuJobs.HeadlineLarge"
                            android:textColor="@color/on_tertiary_container"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Earnings"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/on_tertiary_container" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Recent jobs section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.ChotuJobs.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <!-- Section header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recent Jobs"
                            android:textAppearance="@style/TextAppearance.ChotuJobs.HeadlineSmall"
                            android:textColor="@color/on_surface" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                    <!-- Jobs RecyclerView placeholder -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recentJobsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_job_card_modern" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick actions -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.ChotuJobs.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="Quick Actions"
                        android:textAppearance="@style/TextAppearance.ChotuJobs.HeadlineSmall"
                        android:textColor="@color/on_surface" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.ChotuJobs.Button"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_height"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            android:text="Find Jobs"
                            app:icon="@drawable/ic_search"
                            app:iconGravity="textStart" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.ChotuJobs.Button.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_height"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="Update Profile"
                            app:icon="@drawable/ic_person"
                            app:iconGravity="textStart" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        style="@style/Widget.ChotuJobs.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_height"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation_laborer" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="@string/search_jobs"
        app:srcCompat="@drawable/ic_search"
        app:layout_anchor="@id/bottomNavigation"
        app:layout_anchorGravity="top|center"
        app:backgroundTint="@color/primary"
        app:tint="@color/on_primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
